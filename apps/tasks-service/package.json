{
    "name": "@taskhub/tasks-service",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "build": "rm -rf dist && tsc",
        "start": "node --env-file=.env dist/index.js",
        "dev": "node --env-file=.env --watch dist/index.js",
        "typeorm": "typeorm-ts-node-commonjs -d ./src/data-source.ts",
        "migration:generate": "pnpm typeorm migration:generate",
        "migration:run": "pnpm typeorm migration:run",
        "migration:revert": "pnpm typeorm migration:revert"
    },
    "dependencies": {
        "@nestjs/axios": "^4.0.1",
        "@nestjs/common": "^11.1.6",
        "@nestjs/core": "^11.1.6",
        "@nestjs/mapped-types": "^2.1.0",
        "@nestjs/microservices": "^11.1.6",
        "@nestjs/platform-express": "^11.1.6",
        "@nestjs/terminus": "^11.0.0",
        "@nestjs/typeorm": "^11.0.0",
        "@taskhub/entities": "workspace:*",
        "@taskhub/types": "workspace:*",
        "@taskhub/utils": "workspace:*",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "typeorm": "^0.3.27"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.10",
        "@types/amqplib": "^0.10.7",
        "dotenv": "^17.2.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}